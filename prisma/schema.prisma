generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User{
id String @id @default(uuid())
name String
email String
password String
role UserRoles
contactNo String
address String
profileImg String
@@map("users")
}

enum UserRoles {
admin
customer
}

model Category{
id String @id @default(uuid())
title String
@@map("categories")
}

model Book {
  id String @id @default(uuid())
  title String
  author String
  price Float
  genre String
  publicationDate String
  categoryId String 
  }

